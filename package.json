  "private": true,
  "author": "Evgeniy Malyarov <info@oknosoft.ru> (http://www.oknosoft.ru)",
  "license": "MIT",
  "engines": {
    "node": "^20.2",
    "yarn": "^1.22"
  },
  "dependencies": {
    "camelcase": "^8.0",
    "dayjs": "^1.11",
    "uuid": "^9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22",
    "@babel/preset-env": "^7.22",
    "@babel/preset-react": "^7.22",
    "@rollup/plugin-node-resolve": "^15.2",
    "@rollup/plugin-replace": "^5.0",
    "babel-loader": "^9.1",
    "lerna": "^7.2",
    "react": "^18.2",
    "react-dom": "^18.2",
    "rollup": "^3.28",
    "rollup-plugin-cleanup": "^3.2",
    "typescript": "^5.2",
    "webpack": "^5.88",
    "webpack-cli": "^5.1",
    "webpack-dev-server": "^4.15"
  },
  "peerDependecies": {
  },
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "packages/**",
    "LICENSE.md",
    "LICENSE.en.md"
  ],
  "scripts": {
    "dev": "webpack serve -c example/webpack.config.js",
    "build:core": "node ./packages/core/build.js",
    "build:ui": "cd packages/ui/ && cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ./babel.config.js ./src --out-dir . && node ./copy-files && cd ../../ && node packages/ui/build.js",
    "build:pouchdb": "node ./packages/pouchdb/build.js",
    "build:docs": "yuidoc -c doc/yuidoc.json src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oknosoft/metadata.js.git"
  },
  "bugs": {
    "url": "https://github.com/oknosoft/metadata.js/issues"
  },
  "homepage": "https://oknosoft.ru/metadata",
  "keywords": [
    "metadata",
    "browser data engine",
    "spa offline",
    "couchdb",
    "pouchdb",
    "1c",
    "1с",
    "web сервис",
    "клиент 1с",
    "offline js framework",
    "offline data engine",
    "offline-first",
    "replication"
  ]
