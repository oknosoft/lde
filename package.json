{
  "name": "@metadata/monorepo",
  "description": "Library for building offline-first browser-based business applications",
  "version": "3.0-beta.1",
  "private": true,
  "author": "Evgeniy Malyarov <info@oknosoft.ru> (http://www.oknosoft.ru)",
  "engines": {
    "node": "^16.13",
    "yarn": "^1.22"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
  },
  "devDependencies": {
    "lerna": "^5.5",
    "rollup": "^2.79",
    "rollup-plugin-postcss": "^4.0",
    "typescript": "~4.8.2",
    "webpack": "^5.74"
  },
  "peerDependecies": {
    "react": "^18.2",
    "react-dom": "^18.2"
  },
  "scripts": {
    "build:core": "node ./packages/metadata-core/build.js",
    "build:ui": "cd packages/ui/ && cross-env NODE_ENV=production BABEL_ENV=es babel --config-file ./babel.config.js ./src --out-dir . && node ./copy-files && cd ../../ && node packages/ui/build.js",
    "build:adapter-pouchdb": "node ./packages/metadata-pouchdb/build.js",
    "build:adapter-postgres": "node ./packages/metadata-postgres/build.js",
    "build:docs": "yuidoc -c doc/yuidoc.json src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oknosoft/metadata.js.git"
  },
  "bugs": {
    "url": "https://github.com/oknosoft/metadata.js/issues"
  },
  "homepage": "https://oknosoft.ru/metadata",
  "keywords": [
    "metadata",
    "browser data engine",
    "spa offline",
    "couchdb",
    "pouchdb",
    "1c",
    "1с",
    "web сервис",
    "клиент 1с",
    "offline js framework",
    "offline data engine",
    "offline-first",
    "replication"
  ],
